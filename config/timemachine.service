[Unit]
Description=TimeMachine Backup Service
Documentation=https://github.com/ronaldjonkers/timemachine-backup-linux
After=network.target

[Service]
Type=simple
User=timemachine
Group=timemachine
WorkingDirectory=/opt/timemachine-backup-linux
ExecStart=/opt/timemachine-backup-linux/bin/tmserviced.sh --foreground
ExecReload=/bin/kill -HUP $MAINPID

# Auto-restart: always restart, wait 10s between attempts
Restart=always
RestartSec=10

# Allow up to 5 restarts within 300 seconds before giving up
StartLimitIntervalSec=300
StartLimitBurst=5

StandardOutput=journal
StandardError=journal
SyslogIdentifier=timemachine

# Runtime directories (systemd creates these automatically with correct ownership)
RuntimeDirectory=timemachine
RuntimeDirectoryMode=0750
StateDirectory=timemachine
LogsDirectory=timemachine

# Security hardening
NoNewPrivileges=false
ProtectSystem=false
ProtectHome=false

# Environment
EnvironmentFile=-/opt/timemachine-backup-linux/.env

[Install]
WantedBy=multi-user.target
